{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <h1>Liste des quizz</h1>

    {% for categorie in categories %}


        <h5>{{categorie.name}}</h5>

        <div class="card w-200">
            <h5 class="card-header">Quizz en lien avec la categorie exemple séléctonnée précédement</h5>
            <div class="card-body">
                <h5 class="card-title">Déscription :</h5>
                <p class="card-text">Ici ce trouve la déscription du quizz qui peut être plus ou moins longue selon les cas, il ne faut pas déjà prendre peur.</p>
                <a href="{{ path('app_quizz_front_quizz')}}" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>

    {% endfor %}

{% endblock %}