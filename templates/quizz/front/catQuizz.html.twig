{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <h1 class="my-4">Catégories</h1>
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                Liste des categories
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Catégories</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>

                    {% for categorie in categories %}

                    <tr>
                        <td>{{categorie.name}}</td>
                        <td>{% set maxLength = 250 %} 
                            {% set texteTronque = categorie.description|slice(0, maxLength) ~ (categorie.description|length > maxLength ? '...' : '') %}
                            {{ texteTronque }}</td>
                        <td> 
                        <div class="d-flex justify-content">
                            <a href="{{ path('app_quizz_front_listequizz', {'id': categorie.id })}}" class="btn btn-primary mx-1">Voir</a> 
                        </div>
                        </td>
                    </tr>

                    {% endfor %}

                </tbody>
            </table>

        </div>



{% endblock %}